<resources>

    <style name="Theme.TicTacToe.Light" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:colorBackground">@color/secondaryColor</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:buttonStyle">@style/Widget.PrimaryButton</item>
    </style>

    <style name="Widget.PrimaryButton" parent="android:Widget.Material.Button">
        <item name="android:backgroundTint">@color/primaryColor</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <!-- Use a simple button base and customize to look outlined -->
    <style name="Widget.SecondaryButton" parent="android:Widget.Material.Button">
        <item name="android:background">@drawable/bg_button_outlined</item>
        <item name="android:textColor">@color/primaryColor</item>
    </style>

    <style name="Widget.Cell" parent="android:Widget.Material.Button.Borderless">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:background">@drawable/bg_cell</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:textSize">28sp</item>
    </style>

</resources>
